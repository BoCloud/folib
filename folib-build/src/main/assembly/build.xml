<assembly>
    <id>distribution</id>

    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>src/main/resources/Dockerfile</source>
            <outputDirectory>folib-${project.version}/../</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/init</source>
            <outputDirectory>folib-${project.version}/../</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>target/assembly/folib-${project.version}/etc</directory>
            <outputDirectory>folib-${project.version}/etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/assembly/folib-${project.version}/lib</directory>
            <outputDirectory>folib-${project.version}/lib</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>folib-web-core-*-spring-boot.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/assembly/folib-data/logs</directory>
            <outputDirectory>folib-data/logs</outputDirectory>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/assembly/folib-${project.version}/bin</directory>
            <outputDirectory>folib-${project.version}/bin</outputDirectory>
            <includes>
                <include>folib</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/assembly/folib-${project.version}/bin</directory>
            <outputDirectory>folib-${project.version}/bin</outputDirectory>
            <includes>
                <include>folib.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/assembly/folib-${project.version}/tmp</directory>
            <outputDirectory>folib-${project.version}/tmp</outputDirectory>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/assembly/folib-data</directory>
            <outputDirectory>folib-data</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
